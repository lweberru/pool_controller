{
    "name": "Pool Controller Dev",
    "image": "homeassistant/home-assistant:stable",
    "appPort": [8123],
    "runArgs": [
        "--net=host"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "keesschollaart.vscode-home-assistant"
            ]
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder}/custom_components,target=/config/custom_components,type=bind"
    ],
    "remoteUser": "root"
}